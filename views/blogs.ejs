<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs-container">
        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="blog">
                    <a href="/blogs/<%= blog._id %>">
                        <h2 class="blog-title"><%= blog.title %></h2>
                    </a>
                    <p class="blog-body"><%= blog.body %></p>
                </div>
            <% }) %>
        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>